// media queries
@media (max-width 799px)
  span.hide
    display inline
  .pira, .back
    display none
@media (max-width 750px)
  .grid
    width 100vw
    grid-template-columns 1fr
  .bio, .items
    height auto
  .info
    width 100vw
    min-width 200px
  .gradient, .hero
    display none
  // .pira, .back
  //   display none
  .item a
    grid-template-columns 1fr 35px
  small 
    font 600 18px/1.15 $picoFont
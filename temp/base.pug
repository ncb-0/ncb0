html
  head
    block vars
      - var page = "Base"
    block head
      unless page == "Home"
        title Mel M. &rarr; #{page}
      else
        title Mel Marshall
      //- css
      link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c:500&display=swap")
      link(rel="stylesheet" href="fonts.css")
      link(rel="stylesheet" href="main.css")
      //- icons
      link(rel="apple-touch-icon" sizes="180x180" href="icon/apple-touch-icon.png")
      link(rel="icon" type="image/png" sizes="32x32" href="icon/favicon-32x32.png")
      link(rel="icon" type="image/png" sizes="16x16" href="icon/favicon-16x16.png")
      link(rel="manifest" href="icon/site.webmanifest")
      link(rel="mask-icon" href="icon/safari-pinned-tab.svg" color="#444444")
      link(rel="shortcut icon" href="icon/favicon.ico")
      //- opengraph
      meta(property="og:title" content="Mel Marshall")
      meta(property="og:type" content="website")
      meta(property="og:description" content="I’m Mel Marshall, an artist, graphic designer, and type designer in Toronto, and ½ of SB Int’l.")
      meta(property="og:image" content="http://ncb0.work/icon/ncb0.png")
      meta(property="og:url" content="http://ncb0.work")
      //- other meta
      meta(name="viewport" content="width=device-width, initial-scale=1")
      meta(charset="utf-8")
      //- other meta
      meta(name="apple-mobile-web-app-title" content="Mel Marshall")
      meta(name="application-name" content="Mel Marshall")
      meta(name="msapplication-TileColor" content="#ffffff")
      meta(name="msapplication-config" content="icon/browserconfig.xml")
      meta(name="theme-color" content="#ffffff")
      meta(name="viewport" content="width=device-width, initial-scale=1")
      meta(charset="utf-8")
      //- scripts
      script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js"   integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8=" crossorigin="anonymous")
      script(src="main.js")
  body
